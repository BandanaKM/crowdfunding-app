<%= render '/shared/header' %> 

<!-- Header -->

<html>
  <head>
    <link href="css/bootstrap.css" rel='stylesheet'>
    <link href="css/style.css" rel='stylesheet'>
  </head>
  <body>
    <div class="header">
      <div class="container">
        <div class="col-md-2">
          <img src="img/logo.png" width="161px">
        </div>
        <div class="col-md-3">
          <ul class="primary">
            <li>Discover</li>
            <li>Start</li>
          </ul>
        </div>
        <div class="pull-right">
          <ul>
          <% if current_user %>
          Signed in as <strong> <%= current_user.name %></strong>
          </ul>
          <ul> 
            <li><%= link_to "Logout", '/logout' %></a></li>
          </ul>
          <% else %> 
          <ul>
            <li><%= link_to "Login", '/login' %></a></li>
            <li><%= link_to "Signup", '/signup' %></a></li>
          <% end %> 
          </ul>
        </div>
      </div>
    </div>

<!-- Header -->


<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path %>


    <div class="subjects">
      <div class="container">
        <h1>Explore an innovative creative universe</h1>
        <p>15 diverse categories. Thousands of amazing projects.</p>

        <div class="row">
          <% @subjects.in_groups_of(5).each do |subject_group| %>
            <div class="row">
            <% subject_group.each do |subject| %>
              <div class="col-md-2">
                <%= link_to(subject, {class: "thumbnail"}) do %>
                  <h3><%= subject.name %></h3>
                <% end %>
              </div>
            <% end %>
            </div>
          <% end %>
          
      </div>
    </div>

    <div class="project">
      <div class="container">
        <div class="row">
          <div class="col-xs-5">
            <img src="http://placehold.it/499x374" width="100%">
          </div>
          <div class="col-xs-7">
            <h3 class="title">Title goes here</h3>
            <p class="author">by Author Here</p>
            <p class="description">Description goes here</p>
            <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                <span class="sr-only">40% Complete (success)</span>
              </div>
            </div>                
          </div>

          <div class="col-xs-1">
            <h4>60%</h4>
            <h5>funded</h5>
          </div>
          <div class="col-xs-1">
            <h4>$18,246</h4>
            <h5>pledged</h5>
          </div>
          <div class="col-xs-1">
            <h4>187</h4>
            <h5>backers</h5>
          </div>
          <div class="col-xs-2">
            <h4>11</h4>
            <h5>days to go</h5>
          </div>
        </div>
      </div>
    </div>


<!-- Footer -->


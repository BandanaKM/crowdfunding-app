<%= render '/shared/header' %> 

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @project.creator %>
</p>

<p>
  <strong>Image:</strong>
  <%= @project.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Goal:</strong>
  <%= @project.goal %>
</p>

<p>
  <strong>Total:</strong>
  <%= @project.total %>
</p>


<p>
  <strong>Distance of time:</strong>
  <% Time.now %>
  <% Time.now + 30.days %>
  <%= distance_of_time_in_words(Time.now, Time.now + 30.days) %>
</p>


<ul>
  <% @project.rewards.each do |reward| %>
  <li><a href='/projects/<%= @project.id %>/pledge?amount=<%= reward %>&current_user=<%= current_user.id %>'>Pledge <%= number_to_currency(reward) %></a></li>
  <% end %>
</ul>



<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>



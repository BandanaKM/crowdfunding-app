<%= render '/shared/header' %>

<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.creator %></td>
        <td><%= project.image %></td>
        <td><%= project.description %></td>
        <td><%= project.goal %></td>
        <td><%= project.total %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>


<!doctype html>
<html>
  <head>
    <link href="css/bootstrap.css" rel='stylesheet'>
    <link href="css/style.css" rel='stylesheet'>
  </head>
  <body>

<!-- Header -->

    <div class="header">
      <div class="container">
        <div class="col-md-2">
          <%= image_tag "logo.png", size: "161x20" %>
        </div>
        <div class="col-md-3">
          <ul class="primary">
            <li>Discover</li>
            <li>Start</li>
          </ul>
        </div>
        <div class="pull-right">
          <ul>
            <li><a href="#">Sign up</a></li>
            <li><a href="#">Log in</a></li>
          </ul>
        </div>
      </div>
    </div>

<!-- Header -->
  <% @projects = @projects.to_a %>

    <div class="project">
      <div class="container">
        <% first = @projects.shift %>
        <% if first %>
          <div class="row">
            <div class="col-xs-5">
              <img src="<%= first.image %>" width="100%">
            </div>
            <div class="col-xs-7">
              <h3 class="title"><%= first.title %></h3>
              <p class="author"><%= first.creator %></p>
              <p class="description"><% first.description %></p>
              <div class="progress">
                <% progress = (first.total / first.goal).to_i %>
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= progress %>%">
                  <span class="sr-only"><%= progress %>% Complete (success)</span>
                </div>
              </div>
            </div>

            <div class="col-xs-1">
              <h4><%= progress %>%</h4>
              <h5>funded</h5>
            </div>
            <div class="col-xs-1">
              <h4>$<%= first.total %></h4>
              <h5>pledged</h5>
            </div>
            <div class="col-xs-2">
              <h4><%= distance_of_time_in_words(Time.now, Time.now + 30.days) %></h4>
              <h5>days to go</h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>


    <div class="popular">
      <div class="container">
        <% @projects.in_groups_of(3).each do |projects_group| %>
          <div class="row">
            <% projects_group.each do |project| %>
              <% next unless project %>
              <div class="col-sm-4">
                <div class="thumbnail">
                  <img src="<%= project.image %>">
                  <div class="caption">
                    <h3 class="title"><%= project.title %></h3>
                    <p class="author"><%= project.creator %></p>
                    <p class="description"><% project.description %></p>

                    <div class="progress">
                    <% progress = (first.total / first.goal).to_i %>
                      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: <%= progress %>%">
                        <span class="sr-only"><%= progress %>% Complete (success)</span>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-xs-3">
                        <h4><%= progress %>%</h4>
                        <h5>funded</h5>
                      </div>
                      <div class="col-xs-3">
                        <h4>$<%= project.total %></h4>
                        <h5>pledged</h5>
                      </div>
                      <div class="col-xs-3">
                        <h4><%= distance_of_time_in_words(Time.now, Time.now + 30.days) %></h4>
                        <h5>days to go</h5>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="promo">
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <h2>Success</h2>
          </div>
          <div class="col-md-4">
            <h2>Community</h2>
          </div>
          <div class="col-md-4">
            <h2>Start</h2>
          </div>
        </div>
      </div>
